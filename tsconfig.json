{
  "compilerOptions": {
    // "rootDir": ".",
    "types": ["node", "jest"],
    "target": "es2019",
    "outDir": "dist",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@business/*": ["src/1-business/*"],
      "@controller/*": ["src/2-controller/*"],
      "@framework/*": ["src/3-framework/*"],
      "@test/*": ["test/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src/**/*.ts", "test"],
  "exclude": ["node_modules", "dist"]
}
